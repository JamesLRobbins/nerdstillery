{
  "name": "nerdstillery-express",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "cd server && nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"cd server && yarn server\" \"yarn client\"",
    "start": "cd server && node server.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.10.9"
  },
  "engines": {
    "node": "14.14.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
